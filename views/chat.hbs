{{#if profile}}
<section class="chat">
    <header>
        <h3>Chat</h3>
        <ul id="chat--users"></ul>
    </header>
    <ul id="chat--room">
        <li class="begin--chat">inica la conversación</li>
        {{#each chats}}
        {{{itsMe this.user}}}
            <h4>
                {{this.user}}
            </h4>
            <p>
                {{this.msg}}
            </p>
        {{/each}}
    </ul>
    <form id="chat--form" class="form" method="post">
        <textarea
            class="input input--text"
            name="text"
            placeholder="mensaje"
            maxlength="255"
            autofocus
            required
        ></textarea>
        <button
            class="input submit"
            type="submit"
            value="submit"
        >►</button>
    </form>
</section>
{{else}}
<section class="sect">
    <h3>inicie secion para usar el chat</h3>
    <span>
        <a class="ref animation" href="/signup">signup</a>
        <a class="ref animation" href="/login">login</a>
    </span>
</section>
{{/if}}